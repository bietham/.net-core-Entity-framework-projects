@model ForumApp.ViewModels.TopicCreateViewModel

<form asp-controller="Topic" asp-action="Create" method="POST">
	<input type="hidden" asp-for="ForumSectionId" value="@ViewBag.ForumSectionId"></input>
	<input type="hidden" asp-for="CreatedAt" value="@DateTime.Now"></input>
	<label asp-for="Name"></label>
	<input asp-for="Name" type="text" class="form-control"/>

	<label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control" rows="3"></textarea>

	@Html.ValidationSummary()

	<button type="submit" class="btn btn-success">Add</button>
</form>
