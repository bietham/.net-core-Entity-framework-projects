@model ForumApp.ViewModels.MessageViewModel

<p>Are you sure that you want to delete this message?</p>

<form asp-controller="Message" asp-action="Delete" asp-route-id=@Model.Id method="POST">
    <input type="hidden" asp-for="TopicId" value="@Model.TopicId">
    <button class="btn btn-danger" type="submit" >Yes</button>
</form>

<form asp-controller="Messages" asp-action="Index">
    <button class="btn btn-light" type="submit">No</button>
</form>
   
